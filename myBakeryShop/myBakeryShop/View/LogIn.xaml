<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:myBakeryShop"
             x:Class="myBakeryShop.MainPage"
              NavigationPage.HasNavigationBar="false">
    

    <StackLayout>



            <Image Source="logo.png" Aspect="AspectFit"
               />

            <Entry 
            
           Placeholder ="Enter your user name" x:Name="username" 
           
           HorizontalOptions="Center" 
          
            />




            <Entry Placeholder ="Enter your password" IsPassword ="True"
           
                HorizontalOptions="Center"
                VerticalOptions="CenterAndExpand"
         
          />

            <Button Text="Log in" 
                
                BackgroundColor="Pink"
    
            
                 VerticalOptions="CenterAndExpand"
                 HorizontalOptions="Center"
         
                
                Clicked ="Button_Clicked"
                
                
                />
            
        </StackLayout>

</ContentPage>
